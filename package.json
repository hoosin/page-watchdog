{
  "name": "page-watchdog",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple, modern, and type-safe library to watch for page script updates and notify you of changes.",
  "main": "dist/page-watchdog.cjs.js",
  "module": "dist/page-watchdog.esm.js",
  "browser": "dist/page-watchdog.umd.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "test": "jest",
    "prepublishOnly": "npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoosin/page-watchdog.git"
  },
  "keywords": [
    "page",
    "watch",
    "script",
    "update",
    "dom",
    "polling",
    "typescript",
    "frontend",
    "watchdog"
  ],
  "author": "hoosin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hoosin/page-watchdog/issues"
  },
  "homepage": "https://github.com/hoosin/page-watchdog#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "rollup": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.0"
  }
}
